@model UI.Models.ViewModels.Customers.CustomerListViewModel

@*updated*@

<span class="addedCustomer">@TempData["Result"]</span>
<span class="errorCustomer">@TempData["Error"]</span>
<span class="addedCustomer">@TempData["EditResult"]</span>
<div class="pb-3">
    <a asp-controller="Customers" asp-action="Add">
        Add Customer
    </a>
</div>
<div class="pb-3">
    <form method="get" asp-controller="Customers" asp-action="search" enctype="multipart/form-data">
        <label for="searchTerm">Search Here</label>
        <input type="text" name="searchTerm">
        <button type="submit" value="Submit">Submit</button>
    </form>
</div>

@if (Model.Customers != null && Model.Customers.Count() > 0)
{
    <table class="table table-striped border table-sm">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.Customers[0].CustomerId)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Customers[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Customers[0].CompanyRegistrationNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Customers[0].IncorporationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Customers[0].Turnover)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Customers[0].IsActive)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Customers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.CustomerId)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.CompanyRegistrationNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.IncorporationDate)
                    </td>
                    <td>
                        £@Html.DisplayFor(m => item.Turnover)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.IsActive)
                    </td>
                    <td>
                        <a asp-controller="Customers"
                           asp-action="Edit"
                           asp-route-id="@item.CustomerId"
                          >Edit</a>
                    </td>
                </tr>
}
        </tbody>
    </table> }
else
{
    <div>
        No customers found.
    </div>}